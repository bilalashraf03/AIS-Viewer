# Development Dockerfile with hot-reloading
FROM node:18-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY nodemon.json ./

# Install all dependencies (including devDependencies)
RUN npm install

# Expose ports
EXPOSE 3000 3001

# Use nodemon for hot-reloading
CMD ["npm", "run", "dev"]
