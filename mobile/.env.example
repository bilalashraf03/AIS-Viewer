# Mapbox Configuration
# Get your token from: https://account.mapbox.com/
RNMAPBOX_MAPS_DOWNLOAD_TOKEN=your_mapbox_token_here
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Backend API Configuration
# Replace with your backend server IP address
EXPO_PUBLIC_API_BASE_URL=http://192.168.1.100:3002
EXPO_PUBLIC_WS_URL=ws://192.168.1.100:3002/ws

# Map Configuration
# Tile zoom level for data fetching (default: 12)
EXPO_PUBLIC_TILE_ZOOM=12

# Default Map Center (Hong Kong)
# Change these to your preferred starting location
EXPO_PUBLIC_MAP_CENTER_LON=114.1095
EXPO_PUBLIC_MAP_CENTER_LAT=22.3964
EXPO_PUBLIC_MAP_INITIAL_ZOOM=12
